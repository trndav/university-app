<div class="row sign-up-form">
    <div class="col s6 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Name: <%= @student.name %></span>
                <p>Email: <%= @student.email %></p>
                <p><strong>Course Enrollments: </strong></p>
                <% if @student.courses.empty? %>
                  None
                  <% else %>
                    <ul>
                      <% @student.courses.each do |course| %>                 
                        <p><strong><%= course.name %></strong></p>
                        <p><%= course.description %></p>
                        <br>
                      <% end %>
                    </ul>
                  <% end %>
            </div>
        </div>
        <% if current_user == @student %>
          <%= link_to '<i class="material-icons right">create</i>Edit Profile'.html_safe, edit_student_path(@student), 
                      class: "waves-effect waves-light btn" %>
        <% end %>
    </div>  
</div>
<style>
  .sign-up-form {
    padding-top: 20px;
  }
</style>