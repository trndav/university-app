    <ul>
        <% @student.errors.full_messages.each do |message| %>
            <li><%= message %>
        <% end %>
    </ul>
<% end %>

<div class="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="header">Sign Up!</h3>
                <div class="row">
                    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                        <div class="row">
                            <div class="input-field col s12">                               
                                <%= f.text_field :name, autofocus: "true", placeholder: "Enter your name" %>
                                <%= f.label :name, class: "active"%>                 
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12"> 
                                <%= f.email_field :email, placeholder: "Enter your email" %>
                                <%= f.label :email, class: "active" %>
                            </div>
                        </div>  
                        <%= f.submit "Sign up", class: "btn orange waves-effect waves-light right" %>
                    <% end %>
                </div>
            </div>    
        </div>    
    </div>
</div>
<style>
  .sign-up-form {
    padding-top: 20px;
  }
</style>